<AnchorPane fx:id="newPass_txt" prefHeight="400.0" prefWidth="520.0" style="-fx-background-color: #263F73;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reviewapp.Account">
