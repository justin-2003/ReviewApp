                     <children>
                        <Label text="Username" textFill="WHITE" />
                        <TextField fx:id="user_txt" prefHeight="26.0" prefWidth="160.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="New Password" textFill="WHITE" />
                        <PasswordField fx:id="pass_txt" prefHeight="26.0" prefWidth="161.0" />
                     </children>
                  </HBox>
                  <Label fx:id="errorLabel" alignment="CENTER" prefHeight="17.0" prefWidth="246.0" textFill="WHITE" />
                  <Button fx:id="change_btn" mnemonicParsing="false" text="Change" />
                  <Label fx:id="emailLabel" prefHeight="33.0" prefWidth="161.0" />
                  <Label fx:id="no_of_reviewsLabel" prefHeight="26.0" prefWidth="89.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
